<!-- filepath: app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Admin | Virtual Shop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body { background: #f4f6fa; }
      .admin-sidebar { min-height: 100vh; background: #222; color: #fff; }
      .admin-sidebar a { color: #fff; }
      .admin-header { background: #343a40; color: #fff; padding: 16px; }
    </style>
  </head>
  <body>
    <div class="d-flex">
      <nav class="admin-sidebar p-3">
        <h4>Admin</h4>
        <ul class="nav flex-column">
          <li class="nav-item"><%= link_to "Dashboard", admin_dashboard_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Products", admin_products_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Categories", admin_categories_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Orders", admin_orders_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Clients", admin_clients_path, class: "nav-link" %></li>
          <li class="nav-item mt-3"><%= link_to "Back to Shop", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
        </ul>
      </nav>
      <div class="flex-grow-1">
        <header class="admin-header">
          <h2>Virtual Shop Admin</h2>
        </header>
        <div class="container mt-4">
          <% if notice %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= notice %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= alert %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <%= javascript_importmap_tags %>
  </body>
</html>