<!-- filepath: app/views/admin/categories/index.html.erb -->
<h1>Categories</h1>

<%= link_to "New Category", new_admin_category_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.full_path %></td>
        <td><%= category.parent&.name %></td>
        <td><%= link_to "Show", admin_category_path(category), class: "btn btn-sm btn-info" %></td>
        <td><%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-sm btn-warning" %></td>
        <td>
          <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>