<h1>Clients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Birthdate</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone.presence || "-" %></td>
        <td><%= client.birthdate&.strftime("%d/%m/%Y") || "-" %></td>
        <td><%= link_to "Show", admin_client_path(client), class: "btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>